{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 17,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default configuration using Ninja Multi-Config generator",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build",
      "vendor": {
        "example.com/ExampleIDE/1.0": {
          "autoFormat": true
        }
      },
      "warnings": {
          "dev": true,
          "deprecated": true,
          "systemVars": true
      },
      "errors": {
          "dev": true,
          "deprecated": true
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "output": {
          "debug": true,
          "shortProgress": true,
          "outputOnFailure": true
      },
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    }
  ],
  "vendor": {
    "example.com/ExampleIDE/1.0": {
      "autoFormat": false
    }
  }
}
